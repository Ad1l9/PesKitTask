@model List<Product>
@{
    int count = 1;
}

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Product Table</h2>
            <div class="table-responsive pt-3">
                <a class="btn btn-info btn-primary" asp-controller="Product" asp-action="Create">Add Product</a>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Product product in Model)
                        {
                            <tr class="table-info">
                                <td>
                                    @(count++)
                                </td>
                                <td>
                                    @product.Name
                                </td>
                                <td>
                                    @product.Price
                                </td>
                                <td>
                                    <img style="width:150px; height:150px;" src="~/assets/img/@product.ImageUrl" />
                                </td>
                                <td>
                                    <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning btn-info"> <i class="mdi mdi-pencil"></i> Update</a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-info"> <i class="mdi mdi-delete"></i> Delete</a>
                                    }
                                    <a class="btn btn-primary btn-info"> <i class="mdi mdi-open-in-new"></i> Details</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>