﻿
@model CreateBlogVM

<div class="content-wrapper">
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<form class="forms-sample" method="post" enctype="multipart/form-data">
						<div class="form-group">
							<label asp-for="Photo">Photo</label>
							<input asp-for="Photo" class="form-control" id="Photo" placeholder="Photo">
							<span class="text-danger" asp-validation-for="Photo"></span>
						</div>
						<div class="form-group">
							<label asp-for="Title">Title</label>
							<input asp-for="Title" class="form-control" id="Title" placeholder="Title">
							<span class="text-danger" asp-validation-for="Title"></span>
						</div>
						<div class="form-group">
							<label asp-for="CommentCount">CommentCount</label>
							<input asp-for="CommentCount" class="form-control" id="CommentCount" placeholder="CommentCount">
							<span class="text-danger" asp-validation-for="CommentCount"></span>
						</div>
						<div class="form-group">
							<label asp-for="AuthorId">Author</label>
							<select asp-for="AuthorId" asp-items="new SelectList(Model.Authors,nameof(Author.Id),nameof(Author.Name))">
								<option disabled selected>Choose Author</option>
							</select>
							<span class="text-danger" asp-validation-for="AuthorId"></span>
						</div>
						<div class="form-group">
							<label asp-for="TagIds">Tag</label>
							<select multiple asp-for="TagIds" asp-items="new SelectList(Model.Tags,nameof(Tag.Id),nameof(Tag.Name))">
							</select>
							<span class="text-danger" asp-validation-for="TagIds"></span>
						</div>
						<div class="form-group">
							<label asp-for="Description">Description</label>
							<input asp-for="Description" class="form-control" id="name" placeholder="Description">
							<span class="text-danger" asp-validation-for="Description"></span>
						</div>

						<button type="submit" class="btn btn-primary me-2">Submit</button>
						<a asp-action="Index" class="btn btn-light">Cancel</a>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
