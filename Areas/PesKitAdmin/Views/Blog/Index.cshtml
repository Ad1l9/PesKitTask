
@model List<Blog>
@{
    int count = 1;
}
<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Blog Table</h2>
            <div class="table-responsive pt-3">
                <a class="btn btn-info btn-primary" asp-controller="Blog" asp-action="Create">Add Category</a>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Blog Image
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Tag
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Blog blog in Model)
                        {
                            <tr class="table-info">
                                <td>
                                    @(count++)
                                </td>
                                <td>
                                    <img style="width:150px; height:150px;" src="~/assets/img/@blog.ImageUrl" />
                                </td>
                                <td>
                                    @blog.Title
                                </td>
                                <td>
                                    @foreach (var blogtag in blog.BlogTags)
                                    {
                                        <p>@blogtag.Tag.Name</p>
                                    }
                                </td>

                                <td>
                                    @blog.Description
                                </td>
                                <td>
                                    <a asp-action="Update" asp-route-id="@blog.Id" class="btn btn-warning btn-info"> <i class="mdi mdi-pencil"></i> Update</a>
                                    <a asp-action="Delete" asp-route-id="@blog.Id" class="btn btn-danger btn-info"> <i class="mdi mdi-delete"></i> Delete</a>
                                    <a class="btn btn-primary btn-info"> <i class="mdi mdi-open-in-new"></i> Details</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

