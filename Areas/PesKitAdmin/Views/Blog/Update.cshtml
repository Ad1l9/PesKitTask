@model UpdateBlogVM

<div class="content-wrapper">
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<form class="forms-sample" method="post" enctype="multipart/form-data">
						<div class="form-group">
							<img style="width:170px;height:170px" src="~/assets/img/@Model.ImageUrl" />

							<div class="form-group">
								<label asp-for="Photo">Photo</label>
								<input accept="image/*" asp-for="Photo" class="form-control" id="Photo" placeholder="Photo">
								<span class="text-danger" asp-validation-for="Photo"></span>
							</div>
							<span class="text-danger" asp-validation-for="Photo"></span>
						</div>
						<div class="form-group">
							<label asp-for="Title">Title</label>
							<input asp-for="Title" class="form-control" id="Title" placeholder="Title">
							<span class="text-danger" asp-validation-for="Title"></span>
						</div>
						<div class="form-group">
							<label asp-for="Description"></label>
							<input asp-for="Description" class="form-control" id="Description" placeholder="Description">
							<span class="text-danger" asp-validation-for="Description"></span>
						</div>
						<div class="form-group">
							<label asp-for="AuthorId">Author</label>
							<select asp-for="AuthorId" asp-items="new SelectList(Model.Authors,nameof(Author.Id),nameof(Author.Name))" class="form-control">
							</select>
							<span class="text-danger" asp-validation-for="AuthorId"></span>
						</div>
						<div class="form-group">
							<label asp-for="TagIds">Tags</label>
							<select multiple asp-for="TagIds" asp-items="new SelectList(Model.Tags,nameof(Tag.Id),nameof(Tag.Name))" class="form-control">
							</select>
							<span class="text-danger" asp-validation-for="TagIds"></span>
						</div>
						<div class="form-group">
							<label asp-for="CommentCount">Reply Count</label>
							<input asp-for="CommentCount" class="form-control" placeholder="Reply Count">
							<span class="text-danger" asp-validation-for="CommentCount"></span>
						</div>

						<button type="submit" class="btn btn-primary me-2">Submit</button>
						<a asp-action="Index" class="btn btn-light">Cancel</a>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>